---
import Layout from '../../layouts/Layout.astro'
import User from '../../components/examples/User.astro'

const response = await fetch('https://jsonplaceholder.typicode.com/users/')
const users = await response.json()
---

<Layout pageTitle="Posts page" pageDescription="Posts page description">
  <h1 class="mb-3 text-2xl">Users List</h1>
  <p class="mb-2">
    This list if fetched from a external URL (jsonplaceholder) and Server Side
    Rendered. (At the end, the final page only receives raw HTML).
  </p>
  <ul>
    {
      users.map(
        (user: { name: unknown; address: { city: string | unknown } }) => (
          <>
            <User name={user.name} city={user.address.city} />
          </>
        )
      )
    }
  </ul>
</Layout>
